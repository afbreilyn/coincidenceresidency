<section id="application">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">
          Application
        </h2>
        <hr class="primary">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row text-center" >
      <!-- add back in 'remote true' and coffee script to make cleaner -->
      <%= form_for(@coincident, remote: true) do |f| %>
        <h3>
          Personal Info
        </h3>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br />
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br />
        <%= f.label :birthday %>
        <%= f.date_field :birthday %>
        <br />
        <%= f.label :address %>
        <%= f.text_area :address %>

        <h3>
          Portfolio
        </h3>
        <%= f.label 'Work Sample 1' %>
        <%= f.text_field :link1 %>
        <br />
        <%= f.label 'Work Sample 2' %>
        <%= f.text_field :link2 %>
        <br />
        <%= f.label 'Work Sample 3' %>
        <%= f.text_field :link3 %>
        <br />
        <%= f.label :website %>
        <%= f.text_field :website %>
        <br />
        <%= f.label 'CV / Resume' %>
        <%= f.text_field :cv_resume_link %>

        <h3>
          Proposal
        </h3>
        <%= f.label 'Instrument(s) that you play' %>
        <%= f.text_field :instruments %>
        <br />
        <%= f.label :why_apply %>
        <%= f.text_area :why_apply %>
        <br />
        <%= f.label :project_description %>
        <%= f.text_area :project_description %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</section>