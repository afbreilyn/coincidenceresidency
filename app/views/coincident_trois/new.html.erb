    <%= form_for(@coincidentTroi, :html => {:class => "form-inline"} ) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <h3>
            Personal Info (Required)
          </h3>
          <p class="text-faded">
            Please let us know who you are! Our main means of contact will be e-mail, so please check it (and your spam folder) regularly.
          </p>
          <%= f.label :name, class: 'fugu-width' %>
          <%= f.text_field :name, class: 'form-control', :required => true %>
          <br />

          <%= f.label :email, class: 'fugu-width m-5-top' %>
          <%= f.text_field :email, class: 'form-control m-5-top', :required => true %>
        </div>
        <div class="col-md-6">
          <h3>
            &nbsp;
          </h3>
          <%= f.label :birthday, :required => true, class: 'fugu-width m-5-top' %>
          <%= f.date_field :birthday, class: 'form-control m-5-top', :required => true %>
          <br />
          <%= f.label :address, :required => true, class: 'fugu-width m-5-top' %>
          <%= f.text_area :address, class: 'form-control m-5-top', :required => true %>
        </div>
      </div>
      <br />
      <hr />
      <div class="row">
        <div class="col-md-6">
          <h3>
            Portfolio
          </h3>
          <p class="text-faded">
            *All documents should be linked to via resources like Dropbox and Google Drive. Make sure the documents are accessible to us to view.*
          </p>

          <p class="text-faded">
            You may provide 1 - 3 Work Samples, in whatever form/format you feel best represents you. To note: we only require 1 Work Sample, and the number of Work Samples you submit will not negatively affect application.
          </p>
          <%= f.label :link1, 'Work Sample 1, Link (Required)', class: ' m-5-top', :required => true %>
          <%= f.text_field :link1, class: 'form-control', :required => true %>
          <br />
          <%= f.label :link2, 'Work Sample 2, Link (Optional)', class: ' m-5-top'  %>
          <%= f.text_field :link2, class: 'form-control m-5-top' %>
          <br />
          <%= f.label :link3, 'Work Sample 3, Link (Optional)', class: ' m-5-top'  %>
          <%= f.text_field :link3, class: 'form-control m-5-top' %>
          <br />
        </div>
        <div class="col-md-6">
          <div class="hidden-xs hidden-sm">
            <h3>
              &nbsp;
            </h3>
          </div>
          
          <p class="text-faded">
            Please provide your website if you have it. If you do not, that is okay, it will not negatively affect your application.
          </p>
          <%= f.label 'Website (Optional)' %>
          <%= f.text_field :website, class: 'form-control' %>
          <br />
          <p class="text-faded">
            
          </p>
          <%= f.label :tell_us, "Please tell us about yourself: what have you been up to? what are you interested in? anything you want us to know?" %>
          <%= f.text_area :tell_us, class: 'form-control' %>
          <p class="text-faded">
<!--             Lastly, let us know why are you interested in the festival? (can be brief) -->
          </p>
          <%= f.label :why_ams_you, "Lastly, let us know why are you interested in the festival? (can be brief)" %>
